<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutForFirstFloor"
    tools:context="com.ziyan.test.MainActivity">

    <LinearLayout
        android:id="@+id/CenterLayout"
        android:layout_centerInParent="true"
        style="@style/LayoutForSecondFloor"
        >
        <Button
            android:id="@+id/Register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_style"
            android:text="@string/Register"
            android:textColor="@color/text_font_white"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/CenterLayout"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        style="@style/LayoutForSecondFloor"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/_accounts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/accounts"
                android:textColorHint="@color/text_font_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@null" />

            <ImageView
                android:id="@+id/_image_clearAccounts"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:paddingTop="5dp"
                android:layout_marginRight="31dp"
                android:src="@mipmap/edit_delete"
                android:visibility="invisible"></ImageView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/password"
                android:textColorHint="@color/text_font_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:password="true"
                android:textColor="@null" />

            <ImageView
                android:id="@+id/_image_clearPassword"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:paddingTop="5dp"
                android:layout_marginRight="31dp"
                android:src="@mipmap/edit_delete"
                android:visibility="invisible"></ImageView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffffff" />
    </LinearLayout>

</RelativeLayout>


